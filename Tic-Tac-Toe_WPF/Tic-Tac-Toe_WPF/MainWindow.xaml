<Window x:Class="Tic_Tac_Toe_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe_WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="331" 
        Width="800">

    <StackPanel Orientation="Vertical" Background="Yellow">
        <Button FontSize="25" Click="Two_Players" MinHeight="100" Height="auto" Background="LightSteelBlue" Content="Play With Friend"></Button>
        <Button FontSize="25" Click="With_Computer" MinHeight="100" Height="auto" Background="LightSeaGreen" Content="Play With Computer"></Button>
        <Button FontSize="25" Click="Exit" MinHeight="100" Height="auto" Background="IndianRed" Content="Exit"></Button>
    </StackPanel>
</Window>
